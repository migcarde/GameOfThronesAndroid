<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/smallDimen"
    android:layout_marginTop="@dimen/smallDimen"
    android:background="@drawable/shape_card"
    android:backgroundTint="@color/card_background"
    android:padding="@dimen/smallDimen">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/TextView.Bold.14"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Example text" />

    <TextView
        android:id="@+id/tvGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvCulture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvGender"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvBorn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvCulture"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvDied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvBorn"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvDied"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvAliases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTitles"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvFather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAliases"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvMother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvFather"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvSpouse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvMother"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvAllegiances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSpouse"
        tools:text="Example text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvPlayedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tinyDimen"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvAllegiances"
        tools:text="Example text"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>